if not amount > 0
    h1 WOW, SUCH EMPTY
else
    h1 YOUR ORDER
    table(style='width:auto', border='1')
        each product in details["products"]
            tr
                th
                    h4 {{ product[2] }}x {{ product[0] }} - {{ product[1] }}

    h2 APROX PREP TIME = {{ details["preparation_time"] }} minutes

    form(action="{{ url_for('order') }}" method="post")
        {{ order_form.csrf_token }}
        {{ order_form.notes}}
        span Amount is MDL {{ amount / 100 + amount % 100 }}

        script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-label="Plateste Online" data-key="{{ stripe_key }}" data-description="A Flask Charge" data-amount="{{ amount }}" data-locale="auto" data-currency="mdl")
