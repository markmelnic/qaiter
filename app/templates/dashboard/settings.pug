extends dashboard/layout.pug

block content
    div
        form(method="POST" action="{{ url_for('update_settings') }}")
            h3(class="form_title") Stripe Settings
            h5 Publishable Key
            input(id="stripe_publishable_key" name="stripe_publishable_key" value="{{ settings.stripe_publishable_key }}" type="text")
            h5 Secret Key
            input(id="stripe_secret_key" name="stripe_secret_key" value="{{ settings.stripe_secret_key }}" type="text")
            h5 Currency
            input(id="stripe_currency" name="stripe_currency" value="{{ settings.stripe_currency }}" type="text")
            h5 Transaction Description
            input(id="stripe_transaction_description" name="stripe_transaction_description" value="{{ settings.stripe_transaction_description }}" type="text")

            h3(class="form_title separator top") AWS S3 Settings
            h5 Bucket Name
            input(id="aws_s3_bucket" name="aws_s3_bucket" value="{{ settings.aws_s3_bucket }}" type="text")
            h5 Key ID
            input(id="aws_s3_key_id" name="aws_s3_key_id" value="{{ settings.aws_s3_key_id }}" type="text")
            h5 Key Secret
            input(id="aws_s3_key_secret" name="aws_s3_key_secret" value="{{ settings.aws_s3_key_secret }}" type="text")
            {{ settings_form.update(class="button") }}
