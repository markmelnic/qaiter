extends dashboard/layout.pug

block content
    if not active_orders
        h2 No Active Orders
    else
        table
            caption Active Orders
            tr
                th Created
                th TABLE
                th ITEMS
                th(class="right") QTY
                th(class="right") TOTAL

            each order, index in active_orders
                each prod, qty, item in active_products[index]
                    if item == 0
                        - var span = active_products[index]|length
                        tr(class="topbord")
                            td(rowspan=span) {{order.created}}
                            td(rowspan=span) {{order.table_number}}
                            td {{prod}}
                            td(class="right") {{qty}}
                            td(rowspan=span class="right") {{order.total_price}} lei

                            td(rowspan=span)
                                a(href="complete_order/{{order.id}}")
                                    img(class="button complete" src="{{ url_for( 'static', filename='img/icons/check-mark.png' ) }}")
                    else
                        tr
                            td {{prod}}
                            td(class="right") {{qty}}

    if not completed_orders
        h2 No Completed Orders
    else
        table
            caption Completed Orders
            tr
                th Created
                th Completed
                th TABLE
                th ITEMS
                th(class="right") QTY
                th(class="right") TOTAL

            each order, index in completed_orders
                each prod, qty, item in completed_products[index]
                    if item == 0
                        - var span = completed_products[index]|length
                        tr(class="tobord")
                            td(rowspan=span) {{order.created}}
                            td(rowspan=span) {{order.completed}}
                            td(rowspan=span) {{order.table_number}}
                            td {{prod}}
                            td(class="right") {{qty}}
                            td(rowspan=span class="right") {{order.total_price}} lei

                    else
                        tr
                            td {{prod}}
                            td(class="right") {{qty}}
