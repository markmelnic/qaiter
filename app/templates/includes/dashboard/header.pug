header
    - var navs = [['dashboard', 'general overview', 'Dashboard', 'dashboard.png'], ['orders', 'view and manage orders', 'Orders', 'list.png'], ['tables', 'manage tables and view qr codes', 'Tables', 'qr.png'], ['menu', 'modify the menu or add options', 'Menu', 'menu.png'], ['settings', 'staff & technical options', 'Settings', 'settings.png']]

    div(class="title")
        h1 el Cafe.

    div(class="separator bottom")

    div(class="user")
        img(src="{{ url_for( 'static', filename='img/users/' ) }}{{user.profile_picture}}")
        div(class="details")
            p {{user.firstname}} {{user.surname}}
            p(class="sub") {{user.username}}

    nav(class="separator top bottom")
        each nav in navs
            if title|lower == nav[0]
                - var status = "selected"
            else
                - var status = ""

            a(href="{{nav[0]}}" class=status)
                img(src="{{ url_for( 'static', filename='img/icons/' ) }}{{nav[3]}}")
                {{nav[2]}}

    include includes/dashboard/footer.pug
